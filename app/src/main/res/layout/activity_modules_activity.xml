<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4527A0"
    android:foregroundGravity="fill_vertical|fill"
    tools:context=".modules_activity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="627dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="100dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="30dip"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50dip"
            android:background="#FF9490"
            android:fontFamily="serif-monospace"
            android:text="Test Adulterants"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginTop="40dip"
            android:background="#673AB7"
            android:fontFamily="serif-monospace"
            android:text="Upload Food Issues"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="50dip"
            android:background="#9C27B0"
            android:fontFamily="serif-monospace"
            android:text="Consumer Rights"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="50dip"
            android:background="#1DE9B6"
            android:fontFamily="serif-monospace"
            android:text="Food Alert News"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>